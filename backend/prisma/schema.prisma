generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @id @default(uuid())
  messages Message[]
}

model Message {
  id        String   @id @default(uuid())
  user      String
  bot       String
  timestamp DateTime @default(now())
  userId    String
  userRef   User     @relation(fields: [userId], references: [id])
}
